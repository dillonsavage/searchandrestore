- posted_ago = time_ago_in_words(Time.at(blog_post['unix_timestamp'].to_i)) + ' ago'
- tagged_url = 'http://' + Tumblr::blog + '/tagged/' + blog_post['tag'].gsub(/ /, '-')
- tagged_txt = '#' + blog_post['tag']

.blog-post
  - case blog_post['type']
    - when 'photo'
      .post-body#photo
        = image_tag(blog_post['photo_url'][0]['__content__'])
        %span.photo-caption= blog_post['photo_caption'].html_safe
        %p.time-ago= posted_ago
    - when 'quote'
      .post-body#quote
        %p.quote-text
          :textile
            #{blog_post['quote_text']}
        aslkdgjaslkdgjalksjdglksjg
        %p.tagged= link_to(tagged_txt, tagged_url)
        %p.time-ago= posted_ago
    - when 'video'
      .post-body#video
        .video-player
          = blog_post['video_player'][0].html_safe
        %p.video-caption= blog_post['video_caption'].html_safe
