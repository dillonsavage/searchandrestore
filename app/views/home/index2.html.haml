- masthead_bgs = ['videos','venues','resources','donate','artists','about', 'shows']
- @masthead_bg = masthead_bgs[rand(masthead_bgs.length)] 
- @page_class = "layout-2 page-home masthead-bg-#{@masthead_bg}"
- @blog_post = @blog_posts[2]

#main-content-secondary
  .col-1-2{ :class => @banners.any? && 'with-banner' }
    - if @banners.any?
      .banners{ :class => @banners.size > 1 && 'slides' }
        .slides_container
          - @banners.each do |banner|
            .banner.slide
              = display_banner(banner)
  
    #homepage-features.evoslider.default
      %dl.slides_container
  
        %dt
          FROM THE BLOG
        %dd.section#blog
          - if @blog_posts[0].present?
            = render :partial => 'home/blog', :locals => { :blog_post => @blog_post, :tags => @blog_tags[2] }
      
        %dt
          FEATURED VIDEO
        %dd.section#featured-video
          - if @featured_video.present?
            -#= render :partial => 'videos/video_thumb', :locals => { :thumbnail => nil, :video => @featured_video, :embed => true }
            = render :partial => 'application/player', :locals => { :selected_video => @featured_video, :show => @featured_video.show }
            
        %dt
          TONIGHT'S SHOWS
        %dd.section#tonights_shows
          %ul.header-meta-list
            - @top_picks.each do |show|
              %li
                %h4.box.dark.wrap= show.group_name
                %p.byline
                  %span.date= show.when.strftime("%m/%d/%Y")
                  %span.location= link_to(show.venue.name, show.venue)
            = link_to('See more shows...', shows_path, :class => 'box')

        - if @homepage.blurbs[0].present?
          %dt= @homepage.blurbs[0].title
          %dd.section#homepage-blur
            :textile
              #{@homepage.blurbs[0].text}

        - if @homepage.blurbs[1].present?
          %dt= @homepage.blurbs[1].title
          %dd.section#homepage-blur
            :textile
              #{@homepage.blurbs[1].text}
      
  -#.clear
  
  .col1-2
  
    .col-1#blog
      %h1
        FROM THE BLOG
      %h2
        News, interviews, and more...
        
    .col-2
      #graphic
        - if @homepage.graphic.present?
          = @homepage.graphic.html_safe
      #shows
        %h1
          TONIGHT'S SHOWS
        %h2
          Top picks selected by Search & Restore